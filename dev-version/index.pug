include pug/helpers/variables.pug
- pageTitle = 'Dashboard'

doctype 

html(lang="en")
    head 
        include pug/includes/head-tags.pug
        title=pageTitle
    body
        div(class=pageClassName)
            include pug/layouts/sidebar.pug
            .content
                include pug/layouts/header.pug
                .main__content 
                    .content__title 
                        h2=pageTitle
                    .dashboard__widgets
                        // Start Welcome Widget
                        .widget.welcome--widget
                            .widget__header.widget__header--welcome
                                .welcome_header_text
                                    h3 Welcome 
                                    span Mohammed
                                .welcome_header_image
                                    img(src="imgs/welcome.png")
                            .welcome__profile
                                img(src="imgs/avatar.png")
                            .welcome__content
                                div 
                                    p Mohammed Eladawi
                                    span Developer
                                div
                                    p 80
                                    span Projects
                                div
                                    p $8500
                                    span Earned
                            .welcome__footer
                                button.btn.btn--primary Profile
                        // End Welcome Widget
                        // Start Draft Widget
                        .widget.draft--widget
                            .widget__header.widget__header--draft 
                                h3 Quick Draft
                                span Write A Draft For Your Ideas
                            .draft__content
                                input(type="text" placeholder="Title")
                                textarea(name="thoughts", cols="30", rows="10" placeholder="Your Thoughts")
                            .draft__footer
                                button.btn.btn--primary Save
                        // End Draft Widget
                        // Start Yearly Target Widget
                        .widget.target--widget 
                            .widget__header.widget__header--target.target__header
                                h3 Yearly Target 
                                span Targets Of The Year
                            .target__content
                                each target in targetFeatures
                                    div(class='content_details.content_details--' + target.name)
                                        div(class= 'target__icon.target__icon--' + target.color)
                                            i(class=target.iconClass)
                                        div.target__info
                                            span #{target.name[0].toUpperCase() + target.name.slice(1)}
                                            p=target.count
                                            .progress 
                                                span.reached
                        //  Yearly Target Widget

